---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Header from '@/components/Header';
import Footer from '@/components/Footer';
import ContactForm from '@/components/ContactForm';
import SuburbInternalLinks from '@/components/SuburbInternalLinks';
---

<BaseLayout
  title="Contact Woods Wildlife | Snake Catcher Mudjimba"
  description="Contact Woods Wildlife for professional snake removal in Mudjimba and northern Sunshine Coast suburbs. Call now for prompt response."
  canonical="/contact/"
>
  <div class="min-h-screen bg-background">
    <Header client:load />

    <!-- Page Title -->
    <section class="container pt-20 md:pt-28 pb-10 md:pb-14">
      <div class="max-w-2xl mx-auto text-center">
        <h1 class="text-3xl md:text-4xl lg:text-5xl font-extrabold leading-[0.9] mt-0 mb-14">
          Contact Woods Wildlife
        </h1>
        <a
          href="tel:0435529657"
          class="inline-flex items-center justify-center gap-2 bg-primary text-primary-foreground px-8 py-4 rounded-lg text-base font-medium hover:opacity-90 transition-opacity mb-3"
        >
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path></svg>
          0435 529 657
        </a>
        <p class="text-muted-foreground text-sm mb-0">Available 24/7 for urgent snake removal.</p>
      </div>
    </section>

    <!-- Intro -->
    <section class="bg-card">
      <div class="container pt-12 md:pt-16 pb-20 md:pb-28">
        <div class="max-w-2xl">
          <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold mb-8">
            Professional Snake Removal â€“ Mudjimba &amp; Northern Sunshine Coast
          </h2>
          <div class="space-y-5 text-muted-foreground text-base md:text-lg leading-relaxed">
            <p>
              If you have seen a snake on your property, call immediately for
              safe and licensed removal.
            </p>
            <p>Woods Wildlife is based in Mudjimba and provides professional snake catching and relocation across the Sunshine Coast, including Marcoola, Twin Waters, Pacific Paradise, Mt Coolum and Bli Bli. For other Sunshine Coast locations, contact us directly.</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Request a Call Back -->
    <section id="callback" class="bg-card">
      <div class="container py-20 md:py-28">
        <div class="max-w-2xl">
          <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold mb-8">
            Request a Call Back
          </h2>
          <p class="text-muted-foreground text-base md:text-lg leading-relaxed mb-10">
            For fastest response please call <a href="tel:0435529657" class="text-primary font-medium hover:underline">0435 529 657</a>. If you are unable to call, submit the form below and we will contact you as soon as possible.
          </p>

          <ContactForm client:load />

          <p class="text-muted-foreground text-sm mt-6">
            Keep the form short. The goal is speed.
          </p>
        </div>
      </div>
    </section>


    <!-- Map Section -->
    <section class="container py-20 md:py-28">
      <div class="max-w-2xl">
        <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold mb-8">
          Service Area Location
        </h2>
        <p class="text-muted-foreground text-base md:text-lg leading-relaxed mb-10">
          Woods Wildlife is based in Mudjimba and provides professional snake catching and relocation across the Sunshine Coast, with fast response throughout northern Sunshine Coast suburbs.
        </p>
        <div class="w-full rounded-lg overflow-hidden">
          <iframe
            title="Mudjimba QLD Australia map"
            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3546.0!2d153.1069!3d-26.6117!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x6b937094f5a4b8a1%3A0x4033654628ec210!2sCoolibah%20St%2C%20Mudjimba%20QLD%204564%2C%20Australia!5e0!3m2!1sen!2sau!4v1700000000002"
            width="100%"
            height="400"
            style="border: 0;"
            allowfullscreen
            loading="lazy"
            referrerpolicy="no-referrer-when-downgrade"
            class="w-full"
          ></iframe>
        </div>
      </div>
    </section>

    <SuburbInternalLinks client:load suburbsTitle="Service Locations" suburbsDescription="Woods Wildlife provides professional snake catching services across the Northern Sunshine Coast including:" />

    <!-- Final CTA -->
    <section class="bg-primary text-primary-foreground">
      <div class="container py-20 md:py-28">
        <div class="max-w-2xl mx-auto text-center">
          <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold mb-6 text-primary-foreground">
            Need immediate assistance?
          </h2>
          <p class="text-4xl md:text-5xl lg:text-6xl font-bold mb-4 text-primary-foreground">
            0435 529 657
          </p>
          <p class="text-primary-foreground/60 text-sm mb-10">
            Available 24/7 for urgent snake removal.
          </p>
          <a
            href="tel:0435529657"
            class="inline-flex items-center justify-center gap-2 bg-primary-foreground text-primary px-10 py-4 rounded-lg text-base font-medium hover:opacity-90 transition-opacity"
          >
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path></svg>
            Call Now
          </a>
        </div>
      </div>
    </section>

    <Footer client:load />
  </div>
</BaseLayout>
